{% schema %}
{
    "name": "Testimoni Section",
    "tag": "section",
    "class": "testimoni section-full",
    "settings": [
        {
            "type": "text",
            "id": "badge_text",
            "label": "Badge Text",
            "default": "Testimonial"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Section Title",
