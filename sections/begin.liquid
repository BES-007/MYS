{% schema %}
{
    "name": "How it works Home Section",
    "tag": "section",
    "class": "begin section-full",
    "settings": [
        {
            "type": "text",
            "label": "Section Heading",
            "id": "heading",
            "default": "How it works"
        },
        {
            "type": "text",
            "label": "Main Title",
            "id": "title",
            "default": "Begin your weight loss journey"
        }
    ],
    "blocks": [
        {
            "type": "info_card",
            "name": "Info Card",
            "settings": [
                {
                    "type": "text",
                    "label": "Badge Text",
                    "id": "badge",
                    "default": "Most Effective"
                },
                {
                    "type": "image_picker",
                    "label": "Card Image",
                    "id": "image",
                },
                {
                    "type": "text",
                    "label": "Image Alt Text",
                    "id": "image_alt",
                    "default": "Icon"
                },
                {
                    "type": "text",
                    "label": "Card Title",
                    "id": "card_title",
                    "default": "Compounded Tirzepatide"
                },
                {
                    "type": "text",
                    "label": "Card Price",
                    "id": "card_price",
                    "default": "Starting $265/mo"
                },
                {
                    "type": "text",
                    "label": "Button Text",
                    "id": "button_text",
                    "default": "Get Started"
                }
            ]
        }
    ],
    "max_blocks": 3,
    "presets": [
        {
            "name": "News section"
        }
    ]
}
{% endschema %}
