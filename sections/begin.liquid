<div class="container">
    <div class="begin-content">
        <div class="begin-content_text">
            <span class="begin-content_text_bedge">
                {% if section.settings.heading != blank %}
                    {{ section.settings.heading }}
                {% else %}
                    How it works
                {% endif %}
                </span>
            <h1 class="begin-content_text_title">
                {% if section.settings.title != blank %}
                    {{ section.settings.title }}
                {% else %}
                    Begin yourÂ weight loss journey
                {% endif %}
            </h1>
        </div>
        <div class="begin-content_info-card">
        {% if section.blocks != blank %}
            {% for block in section.blocks %}
            <div class="begin_info-items">
                <div class="begin_bedge">{{ block.settings.badge }}</div>
                <img class="begin-card_image" src="{{ block.settings.image | image_url: 'medium' }}" alt="{{ block.settings.image_alt }}" width="250" height="250">
                <h2>{{ block.settings.card_title }}</h2>
                <p>{{ block.settings.card_price }}</p>
                <div class="begin_button-wrapper">
                    <button class="button btn-black is-small is-fullwidth">
                        {{ block.settings.button_text }}
                    </button>
                    <a class="button btn-outline is-small is-fullwidth">
                        Learn more
                    </a>
                </div>
            </div>
            {% endfor %}
        {% else %}

            <div class="begin_info-items">
                <div class="begin_bedge">Most Effective</div>
                <img class="begin-card_image" src="{{ 'vaccine-bottle1.png' | asset_url }}" alt="Icon" width="250" height="250">
