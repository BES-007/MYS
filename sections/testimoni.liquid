                    "type": "text",
                    "id": "testimonial_text",
                    "label": "Testimonial Text",
                    "default": "Love having the ability to buy NAD and glutathione online. This isn't something you can ask for at your PCP office."
                },
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Profile Image"
                },
                {
                    "type": "text",
                    "id": "name",
                    "label": "Name",
                    "default": "Jenny Ortega"
                },
                {
                    "type": "text",
                    "id": "profession",
                    "label": "Profession",
                    "default": "Founder at Altair.co"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Testimoni Section",
            "category": "Text",
            "blocks": [
                {
                    "type": "testimonial"
                }
            ]
        }
    ]
}
{% endschema %}
